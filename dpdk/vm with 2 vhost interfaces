sudo qemu-system-x86_64 -enable-kvm -cpu host -m 4096M -smp 2,threads=1,sockets=1 -chardev socket,id=char0,path=/tmp/sockA1 -netdev type=vhost-user,id=mynet0,chardev=char0,vhostforce -device virtio-net-pci,netdev=mynet0,mac=00:00:00:00:00:01 -object memory-backend-file,id=mem,size=4096M,mem-path=/mnt/huge,share=on -chardev socket,id=char1,path=/tmp/sockA2 -netdev type=vhost-user,id=mynet1,chardev=char1,vhostforce -device virtio-net-pci,netdev=mynet1,mac=00:00:00:00:00:02 -object memory-backend-file,id=mem2,size=4096M,mem-path=/mnt/huge,share=on -numa node,memdev=mem2 -mem-prealloc -net user,hostfwd=tcp::10022-:22 -net nic /root/ParaBox/Vyatta-3.5R5.qcow2
